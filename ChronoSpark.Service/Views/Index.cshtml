        <form method="post" id="task-form" action="/home/addtask">
          <h2>Add task</h2>
          Description: <input type="text" class="input-big" id="description" value="" />
          Duration: <input type="text" class="input-big" id="duration" value="" />
          Client: <input type="text" class="input-big" id="client" value="" />    
          <input type="button" name="send" value="Add" id="addtask" class="add-btn"/>
        </form>

        <form>
        <div id="tasks-wrapper" class="edit">
          <h2>Tasks</h2>
          <ul id ="tasks-list">
           
          </ul>
        </div>
        <div class="cleared"></div>
        </form>
        
      </div>
        


        <a rel="shadowbox[Mixed]" href="/task/getbyid">iframe</a>

      <div id="footer">
        Nearsoft.
      </div>
    </div>
                <button id="getAllTasks">Get All Tasks</button>

        <ol id="task-list" class="round"></ol>
        
         
          <script src="Scripts/Home/FileServer/main.js" type="text/javascript"></script>
